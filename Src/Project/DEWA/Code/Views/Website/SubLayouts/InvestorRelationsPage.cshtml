@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@{

    var lang = Sitecore.Context.Language.CultureInfo.TextInfo.IsRightToLeft ? "ar" : "en";
}

<div id="mainArea">
    <div id="wr">
        <div id="rs_area">
            <div class="rs_preserve">
                @Html.Sitecore().Placeholder("main/masthead")
                @Html.Sitecore().Placeholder("main/hero")
                <div class="grid j157-investor-relations" data-journey="j157-investor-relations">
                    @Html.Sitecore().Placeholder("main/modalcountries")
                    @Html.Sitecore().Placeholder("main/content1")
                    <div class="grid__row">
                        <div class="grid__column grid__column--3">
                            @Html.Sitecore().Placeholder("main/content2")
                        </div>
                        <div class="grid__column grid__column--9">
                            @Html.Sitecore().Placeholder("main/content3")
                        </div>
                    </div>
                    @Html.Sitecore().Placeholder("main/content4")
                </div>
                @Html.Sitecore().Placeholder("main/dewanumbers")
                @Html.Sitecore().Placeholder("main/highlights")
                @Html.Sitecore().Placeholder("main/revenue")
                <div class="grid j157-investor-relations" data-journey="j157-investor-relations">
                    @Html.Sitecore().Placeholder("main/exploremore")
                </div>
                @Html.Sitecore().Placeholder("main/upcomingevents")


                @Html.Sitecore().Placeholder("main/contactus")
                @Html.Sitecore().Placeholder("main/footer")
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://tools.euroland.com/tools/common/eurolandiframeautoheight/eurolandtoolsintegrationobject.js"></script>
<script type="text/javascript">
    docReady(function () {
        var IDs = [];



        jQuery('.j157-investor-relations').find('iframe').each(function (index) {
            jQuery(this).attr('id', 'iframe-' + index);
            IDs.push('iframe-' + index);
        });
        jQuery('.m1-hero--stock').find('iframe').each(function (index) {
            jQuery(this).attr('id', 'm1iframe-' + index);
            IDs.push('m1iframe-' + index);
        });
        jQuery('.m103-marquee').find('iframe').each(function (index) {
            jQuery(this).attr('id', 'm103iframe-' + index);
            IDs.push('m103iframe-' + index);
        });



        for (var i = 0; i < IDs.length; i++) {
            EurolandToolIntegrationObject.set(IDs[i])
        }



        setTimeout(function () {
            var mobIDs = [];
            jQuery('.j157-investor-relations .m41-tabs-box--mobile').find('iframe').each(function (index) {
                jQuery(this).attr('id', 'mobiframe-' + index);
                mobIDs.push('mobiframe-' + index);
            });
            for (var i = 0; i < mobIDs.length; i++) {
                EurolandToolIntegrationObject.set(mobIDs[i])
            }
        }, 250);


        if (jQuery(".m12-bar--investor__list") != undefined && jQuery(".m12-bar--investor__list") != null) {
            if ('@lang' == 'ar') {
                jQuery(".m12-bar--investor__list").find('a[href="' + window.location.href.toString().split(window.location.host)[1].replace("/ar-AE", "") + '"]').addClass('active');
            } else {
                jQuery(".m12-bar--investor__list").find('a[href="' + window.location.href.toString().split(window.location.host)[1].replace("/en", "") + '"]').addClass('active');
            }
        }
    });
</script>


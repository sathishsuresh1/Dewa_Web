                    jQuery("#form-field-ManufacturerPhonecode").removeAttr("disabled");
                    jQuery("#btSubmit").html("@Translate.Text("Submitting")...");
                    jQuery("#btSubmit").attr("disabled", true);
                    $('#drrgregistrationform').submit();
                    return true;
                }
                 else {

            function checkManufacturerValidation(field_type) {
                var form = jQuery("#drrgregistrationform");
                var token = $('input[name="__RequestVerificationToken"]', form).val();
                var url = "/api/sitecore/DRRGRegistration/CheckManufacturerValidation";
                var manufCode = '@Model.ManufacturerCode';
                jQuery.ajax({
                    url: url,
                    traditional: true,

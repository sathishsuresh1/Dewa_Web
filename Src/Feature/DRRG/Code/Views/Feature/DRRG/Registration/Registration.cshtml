    <script type="text/javascript">
        $(document).ready(function () {
            var $factoryform = jQuery('.j01-drrg-registration--factory_form');
            var $tbody = jQuery('.j01-drrg-registration--factory_form').find('.j01-factory_table tbody');
            var totalstep = 3;
            var current = 1;
            var txt = jQuery('.pageclass[data-page=0]').find('.legend').text();
            var $manufacturerName = jQuery("#form-field-manufacturerfullname");
            var $brandname = jQuery("#form-field-brandname");
            var $submitBtn = jQuery("#btSubmit");
            var errManufacturerName = jQuery('#description-for-manufacturerfullname');
            var errBrandname = jQuery('#description-for-brandname');
            steptracker(current, txt);

            if ('@Model.UserLocalRepresentative' == 'True') {
                jQuery("#comp_name").show();//file_tradelicense
                jQuery("#file_tradelicense").show();//file_tradelicense
                if ('@srcTradeLicenseDoc' == null || '@srcTradeLicenseDoc' == "/images/preview@2x.png") {
                    jQuery("#form-field-tradelicense").attr('required', true);
                }

                jQuery("#form-field-UserPhonecode").val("971");
                jQuery("#form-field-UserPhonecode").attr("disabled", "disabled");
            }
            else {
                jQuery("#comp_name").removeAttr("style").hide();
                jQuery("#file_tradelicense").removeAttr("style").hide();
                jQuery("#form-field-tradelicense").removeAttr('required');
                jQuery("#form-field-UserPhonecode").removeAttr("disabled");
            }
            function steptracker(current, txt) {
                $('.m38-step-tracker').attr('data-total-steps', totalstep);
                $('.m38-step-tracker').attr('data-current-step', current);
                $('.m38-step-tracker__progressbar').attr('aria-valuetext', txt);
                $('.m38-step-tracker').attr('data-hasInfo', "true");
                jQuery(window).trigger('reinit_m38');
            }
            $('input[type=radio][name=UserLocalRepresentative]').change(function () {
                if (this.value == 'False') {
                    jQuery("#comp_name").removeAttr("style").hide();
                    jQuery("#file_tradelicense").removeAttr("style").hide();
                    jQuery("#form-field-tradelicense").removeAttr('required');
                    jQuery("#form-field-UserPhonecode").removeAttr("disabled");
                }
                else if (this.value == 'True') {
                    jQuery("#comp_name").show();//file_tradelicense
                    jQuery("#file_tradelicense").show();//file_tradelicense
                    jQuery("#form-field-tradelicense").attr('required', true);
                    jQuery("#form-field-UserPhonecode").val("971");
                    jQuery("#form-field-UserPhonecode").attr("disabled", "disabled");
                }
            });
            jQuery('.nextbutton').click(function (e) {
                e.preventDefault();
                var proceed = true;
                var pagenumber = parseInt(jQuery(this).closest('.pageclass').attr("data-page"));
                if (jQuery('.pageclass[data-page=' + (pagenumber) + ']').hasClass('j01-drrg-registration--factory_form')) {
                    if ($tbody.find('tr').length == 0) {
                        e.preventDefault();
                        $('.field-error').fadeIn();
                        proceed = false;
                    }
                    else {
                        nexpageload(pagenumber);
                    }
                }
                else {
                    require(['parsley'], function () {
                        jQuery('#drrgregistrationform').parsley().validate();
                        if (jQuery('#drrgregistrationform').parsley().isValid()) {
                            nexpageload(pagenumber);
                        };
                    });
                }
            });
            function nexpageload(pagenumber) {
                jQuery('.pageclass[data-page=' + (pagenumber) + ']').addClass('hidden');
                jQuery('.pageclass[data-page=' + (pagenumber + 1) + ']').removeClass('hidden');
                jQuery('.pageclass').not(jQuery('.pageclass[data-page=' + (pagenumber + 1) + ']')).addClass('hidden');
                var txt = jQuery('.pageclass[data-page=' + (pagenumber + 1) + ']').find('.legend').text();
                steptracker(pagenumber + 2, txt);
                if (pagenumber == 1) {
                    jQuery(window).trigger('resize');
                }
                jQuery('html,body').animate({ scrollTop: 0 }, 1000);
            }
            jQuery('.backbutton').click(function (e) {
                e.preventDefault();
                var pagenumber = parseInt(jQuery(this).closest('.pageclass').attr("data-page"));

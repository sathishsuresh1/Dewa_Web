<div class="form-field form-field--upload form-field--upload_new">
    <div class="form-field__input-wrapper">
        <div class="form-field__uploader-details">
            <label for="@Html.IdFor(m => Model.Files)" class="form-field__label @Model.LabelCssClassSettings.CssClass">@Html.DisplayTextFor(t => Model.Title)</label>
            <div>
                <label>
                    <input id="@Html.IdFor(m => Model.Files)" data-uploader-field="@Html.IdFor(m => Model.Files)" name="@Html.NameFor(m => Model.Files)" class="form-field__input form-field__input--upload @Model.CssClassSettings.CssClass" type="file" @(Model.IsMultiple ? "Multiple" : string.Empty) data-sc-tracking="@Model.IsTrackingEnabled" data-sc-field-name="@Model.Name" data-sc-field-key="@Model.ConditionSettings.FieldKey" @Html.GenerateUnobtrusiveValidationAttributes(m => m.Files) accept="application/msword, application/vnd.ms-excel, application/pdf, image/*" data-accepts='"jpg", "bmp","gif","png","jpeg","pdf","doc","docx","xls","csv", "xlsx"' data-size="@Model.MaxFileSize" />
                    <span class="button button--upload focus-enabled" data-uploader-button="upload-choose">Document Upload Field</span>
                </label>
            </div>
            <p class="form-field__input--upload-format-error-message" data-uploader-format-error="error-message">Upload format is not correct</p>
            <p class="form-field__input--upload-size-error-message" data-uploader-size-error="error-message">Upload file size is too high</p>
            <p class="form-field__input--upload-filename" data-uploader-filename="@Html.IdFor(m => Model.Files)"></p>
            <p class="relative">
                <button class="button--upload_remove hidden" data-uploader-remove="@Html.IdFor(m => Model.Files)"><span class="aria-only">Remove</span></button>
            </p>
            <div class="form-field__input--upload-filesize hidden" data-uploader-filesize="@Html.IdFor(m => Model.Files)">
                <span data-currentsize="@Html.IdFor(m => Model.Files)">-</span>kB of <span data-totalsize="@Html.IdFor(m => Model.Files)"></span>kB
                <div class="form-field__input--upload-filesize_bar">
                    <div class="form-field__input--upload-filesize_green">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="description-for-@Html.IdFor(m => Model.Files)" class="form-field__messages">
        @Html.ValidationMessageFor(m => Model.Files, "", new { @class = "parsley-errors-list" }, "span")
        <p class="form-field__description"></p>
    </div>
</div>
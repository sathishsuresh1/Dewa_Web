@using DEWAXP.Foundation.Helpers
@using Glass.Mapper.Sc.Fields
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using Sitecore.Globalization
@using DEWAXP.Feature.GatePass.Models.ePass
@using DEWAXP.Foundation.Content
@model DEWAXP.Feature.GatePass.Models.ePass.PermanentPass


<div class="j113-epass" data-journey="j113-epass">
    <div class="grid">
        <div class="grid__row">
            <div class="grid__column grid__column--12" id="main-skip">
                <div class="m26-page-title title_message">
                    <div class="m26-page-title__links">
                    </div>
                    @if (Model.PassType == DEWAXP.Feature.GatePass.Models.ePass.SubPasses.SubPassType.Night.ToString())
                    {
                        <h2 class="text__page-title">@Translate.Text("Epass.Night Pass")</h2>
                    }
                    else if (Model.PassType == DEWAXP.Feature.GatePass.Models.ePass.SubPasses.SubPassType.Holiday.ToString())
                    {
                        <h2 class="text__page-title">@Translate.Text("Epass.Holiday Pass")</h2>
                    }
                    else if (Model.PassType == DEWAXP.Feature.GatePass.Models.ePass.SubPasses.SubPassType.Device.ToString())
                    {
                        <h2 class="text__page-title">@Translate.Text("Epass.Device Pass")</h2>
                    }
                    else if (Model.PassType == DEWAXP.Feature.GatePass.Models.ePass.SubPasses.SubPassType.Material.ToString())
                    {
                        <h2 class="text__page-title">@Translate.Text("Epass.Material Pass")</h2>
                    }
                    else if (Model.PassType.Equals(EpassHelper.GetDisplayName(PassType.LongTerm)))
                    {
                        <h2 class="text__page-title"> @Translate.Text("Epass.Applyperpass")</h2>
                    }
                    else if (Model.PassType.Equals(EpassHelper.GetDisplayName(PassType.ShortTerm)))
                    {
                        <h2 class="text__page-title"> @Translate.Text("Epass.Applyperpassshortterm")</h2>
                    }
                    else
                    {
                        <h2 class="text__page-title"> @Translate.Text("Epass.Applyperpass")</h2>
                    }
                </div>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--12 grid__column--content">
                <div class="m40-status-message m40-status-message--success  icon icon-new-success-message " data-component="m40-status-message">
                    <div class="m40-status-message__title">
                        @Translate.Text("Epass.Submissionsuccess")
                    </div>
                    <div class="m14-richtext">
                        <p class="">
                            @Translate.Text("Epass.Referencenumber"): <strong>@Model.ReferenceNumber</strong>
                        </p>
                    </div>
                    @*<div class="m40-status-message__title">
                            @Translate.Text("Epass.Referencenumber"): <strong>@Model.ReferenceNumber</strong>
                        </div>*@
                </div>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--12 grid__column--content grid__column--centered">
                <div class="m14-richtext">
                    <h3>
                        @Translate.Text("Epass.Whatsnext")
                    </h3>
                    <br />
                </div>
            </div>
        </div>

        <div class="grid__row">

            <div class="grid__column grid__column--12 grid__column--centered">
                <a href="@ViewBag.RedirectLink" class="button button--next mb12" style="margin: 0 25px 12px;">
                    @Translate.Text("Epass.Applyanotherpass")
                </a>
                <a href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.EPASS_DASHBOARD)" class="button button--primary button--next mb12" style="margin: 0 25px 12px;">@Translate.Text("Epass.Gotodashboard")</a>
            </div>
        </div>
    </div>
</div>


@using DEWAXP.Foundation.Helpers
@using Glass.Mapper.Sc.Fields
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using Sitecore.Globalization
@using DEWAXP.Foundation.Content
@model DEWAXP.Feature.GatePass.Models.ePass.SecurityPassViewModel

<div class="j113-epass">
    <div class="m66-preloader j113-epass--loader hidden">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column grid__column--12">
                    <h2 class="text__section-subtitle">@Translate.Text("Epass.Pleasewait")</h2>
                    <div class="loader"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="j113-epass">
    <div class="grid">
        <div class="grid__row">
            @if (Model.IsBlocked)
            {
                <div class="m39-modal j113-epass_modal--confirm" data-component="m39-modal" id="unblock_modal_true">
                    <button data-trigger="true" class="m39-modal__trigger" type="button" id="_8gguopjrg_trigger" aria-controls="_8gguopjrg_content"></button>
                    <div data-content="true" class="m39-modal__container" role="dialog" aria-expanded="false" id="_hznj48fu1_content" aria-labelledby="_hznj48fu1_trigger">
                        <div class="m39-modal__dialog">
                            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form static-form", @id = "form-unblockpass", data_form = "true", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="m39-modal__header">
                                    <div class="m39-modal__title">@Translate.Text("Epass.Confirm")</div>
                                </div>
                                <div class="m39-modal__content" style="top: 31px;">
                                    <div class="grid__row approvecontent">
                                        @Translate.Text("Epass.Wanttounblockpass")
                                    </div>
                                    <div class="grid__row">
                                        <a class="button m39-m12-no" href="#">  @Translate.Text("Epass.No") </a>
                                        <a data-eid="" data-id="" id="m39-m12-unblockpass" class="button button--primary m39-m12-yesApprove" href="#">  @Translate.Text("Epass.Yes") </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div id="my_idmodal">
                    <div class="m39-modal m39-modal--new j113-epass-sharemodal" data-component="m39-modal" id="block_modal_true" data-labels='{"block": "@Translate.Text("Epass.Blockpass")"}'>
                        <button data-trigger="true" class="block m39-modal__trigger" type="button" id="_8gguopjrg_trigger" aria-controls="_8gguopjrg_content"></button>
                        <div data-content="true" class="m39-modal__container" role="dialog" aria-expanded="true" id="_8gguopjrg_content" aria-labelledby="_8gguopjrg_trigger">
                            <div class="m39-modal__dialog" id="BlockForm" style="max-height:400px;">

                                @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form static-form", @id = "form-blockuserorpass", data_form = "true", enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="m39-modal__header">
                                        <div class="m39-modal__title"> @Translate.Text("Epass.IndPassNo"): @Model.passNumber </div>
                                        <a data-close="true" id="btnclose" class="m39-modal__button--close">@Translate.Text("Epass.Close")</a>
                                    </div>
                                    <div class="m39-modal__content">
                                        <div class="grid__row mb0">
                                            <div class="grid__column--12">
                                                <div class="form-field j113-epass-shareradios">
                                                    <p class="form-field__checkbox">
                                                        <label>
                                                            <input class="form-field__input form-field__input--checkbox" id="chkPass" type="checkbox" value="BlockPass" aria-describedby="description-for-chkUser" data-parsley-errors-container="#description-for-chkUser">
                                                            <span class="form-field__fakecheckbox">@Translate.Text("Epass.Blockpass")</span>
                                                        </label>
                                                    </p>
                                                    <p class="form-field__checkbox">
                                                        <label>
                                                            <input class="form-field__input form-field__input--checkbox" id="chkUser" type="checkbox" value="BlockUser" aria-describedby="description-for-chkPass" data-parsley-errors-container="#description-for-chkPass" data-parsley-id="35">
                                                            <span class="form-field__fakecheckbox">@Translate.Text("Epass.Blockuser")</span>
                                                        </label>
                                                    </p>

                                                    <div id="description-for-c3ydrrns1" class="form-field__messages">
                                                    </div>
                                                    <label for="form-field-blockcomments" class="form-field__label">
                                                        @Translate.Text("Epass.Comments")
                                                    </label>
                                                    <span class="form-field__input-wrapper">
                                                        <textarea class="form-field__input form-field__input--text form-field__input--textarea"
                                                                  maxlength="500"
                                                                  data-textarea="comments"
                                                                  id="form-field-blockcomments"
                                                                  name="Details"
                                                                  type="textarea"
                                                                  required=""
                                                                  aria-describedby="description-for-comments"
                                                                  data-parsley-error-message="@Translate.Text("Epass.Entercomment")"
                                                                  data-parsley-required-message="@Translate.Text("Epass.Requiredfield")"
                                                                  data-parsley-id="10"></textarea>
                                                    </span>
                                                    <div id="description-for-j0o6zzw1u" class="form-field__messages">
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="m39-modal__footer">
                                        <button class="button button--primary" id="btnConfirmBlock" data-accountupdate="true" type="button" data-modal-confirm="true">@Translate.Text("Epass.Confimuser")</button>
                                    </div>
                                }

                            </div>
                        </div>
                        <div class="m39-modal__overlay"> </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
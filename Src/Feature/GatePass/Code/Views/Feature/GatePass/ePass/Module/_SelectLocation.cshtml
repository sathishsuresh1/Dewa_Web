                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_2_2"
                                           name="MainLocation"
                                           type="radio"
                                           value="other" @if (!string.IsNullOrEmpty(Model.MainLocation)) { Html.Raw(Model.MainLocation.Equals("other") ? "checked=\"checked\"" : ""); }
                                           aria-describedby="description-for-3jljdojuh"
                                           data-parsley-errors-container="#description-for-3jljdojuh">
                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("EPass.Location.Other")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-3jljdojuh" class="form-field__messages">
                                <p class="form-field__error"></p>
                            </div>

                        </fieldset>

                    </div>

                    <div class="form-field">
                        <button type="submit" class="button button--primary button--fullwidth-mobile button--next" data-submission-text="@Translate.Text("Submitting")...">
                            @Translate.Text("Epass.Continue")
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

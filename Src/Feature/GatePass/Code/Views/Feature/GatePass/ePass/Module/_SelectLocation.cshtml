                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_2_1"
                                           name="MainLocation"
                                           type="radio"
                                           value="generation" @if (!string.IsNullOrEmpty(Model.MainLocation)) { Html.Raw(Model.MainLocation.Equals("generation") ? "checked=\"checked\"" : ""); }
                                           aria-describedby="description-for-3jljdojuh" required="required" data-parsley-required-message="@Translate.Text("Epass.Requiredfield")"
                                           data-parsley-errors-container="#description-for-3jljdojuh">
                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("EPass.Location.Generation")
                                    </span>
                                </label>
                            </p>*@


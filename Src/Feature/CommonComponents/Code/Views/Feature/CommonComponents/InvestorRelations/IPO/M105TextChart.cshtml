                        </div>
                        <div class="m105-text-chart--graph" data-chart105-container
                             data-series='[{"name":"2021 EBITDA", "data":[{"name":"@strElectricity", "color":"@clrElectricity", "y":"@vlLegend1chart2"}, {"name":"@strWater", "color":"@clrWater", "y":"@vlLegend2chart2"}, {"name":"@strSustainability", "color":"@clrSustainability", "y":"@vlLegend3chart2"}, {"name":"@strInnovation", "color":"@clrInnovation", "y":"@vlLegend4chart2"}]}]'>
                        </div>
                        <div class="m105-text-chart--footercolumn">
                            <div class="m105-text-chart--footeritem">
                                <div class="m105-text-chart--footeritem_inner">
                                    <strong>@Translate.Text("m105.Footertext2")</strong><br>

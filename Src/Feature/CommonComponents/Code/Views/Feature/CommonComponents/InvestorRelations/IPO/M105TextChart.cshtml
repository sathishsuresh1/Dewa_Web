                                    @Translate.Text("m105.Footertext5")
                                </div>
                            </div>
                        </div>
                    </div>*@
                </div>
                <div class="m105-text-chart--legend">
                    <div class="m105-text-chart--legenditem">
                        <div class="m105-text-chart--legendmark" style="background-color:@clrElectricity;"></div>@strElectricity
                    </div>
                    <div class="m105-text-chart--legenditem">
                        <div class="m105-text-chart--legendmark" style="background-color:@clrWater;"></div>@strWater
                    </div>
                    <div class="m105-text-chart--legenditem">
                        <div class="m105-text-chart--legendmark" style="background-color:@clrSustainability;"></div>@strSustainability
                    </div>
                    <div class="m105-text-chart--legenditem">
                        <div class="m105-text-chart--legendmark" style="background-color:@clrInnovation;"></div>@strInnovation
                    </div>
                </div>
            </div>
        </div>
    </div>

@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Globalization
@model DEWAXP.Feature.CommonComponents.Models.Renderings.VideoPlayerModalPopup
@if (Model != null)
{
    <div class="m36-videoplayer--variant" data-title="@Html.Glass().Editable(Model, x => x.ModalPopupTitle)" data-iframe='@Html.Raw(Model.ModalPopupHtml)'>
        <div class="m36-videoplayer--details">
            <div class="m36-videoplayer--date">
                @(Model.VideoDate.ToString("dd MMM yyyy", Sitecore.Context.Culture))
            </div>
            <div class="m36-videoplayer--title">
                @Html.Glass().Editable(Model, x => x.VideoTitle)
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.VideoDescription))
            {
                <div class="m36-videoplayer--description">
                    @Html.Glass().Editable(Model, x => x.VideoDescription)
                </div>
            }
            <div class="button button--primary button--fullwidth-mobile m36-videoplayer--play">
                @Translate.Text("WatchNow")
            </div>
        </div>
        @if (Model.VideoPreviewImage != null)
        {
            <div class="m36-videoplayer--image" style="background-image: url('@Model.VideoPreviewImage.Src');">
            </div>
        }
    </div>
    <div class="m39-modal m39-modal--new m39-modal--video" data-component="m39-modal" id="modal_true">
        <button data-trigger="true" class="m39-modal__trigger hidden" type="button" id="_073iiw67p_trigger" aria-controls="_073iiw67p_content">@Translate.Text("WatchNow")</button>
        <div data-content="true" class="m39-modal__container" role="dialog" aria-expanded="false" id="_073iiw67p_content" aria-labelledby="_073iiw67p_trigger">
            <div class="m39-modal__dialog">
                <div class="m39-modal__header p0">
                    <div class="m39-modal__title">@Html.Glass().Editable(Model, x => x.ModalPopupTitle)</div>
                    <a data-close="true" class="m39-modal__button--close" id="_073iiw67p_close" aria-controls="_073iiw67p_content"></a>
                </div>
                <div class="m39-modal__content p0" style="top: 55.7969px;"></div>
                <div class="m39-modal--video_alt">@Html.Glass().Editable(Model, x => x.ModalPopupDescription)</div>
            </div>
        </div>
        <div class="m39-modal__overlay" style="display: none;"> </div>
    </div>
}
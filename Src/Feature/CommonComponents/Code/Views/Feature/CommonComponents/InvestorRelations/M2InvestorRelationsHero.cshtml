@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model DEWAXP.Feature.CommonComponents.Models.Renderings.Hero

@if (Model != null && Model.Id != Guid.Empty && Model.Children != null)
{
    <div class="m1-hero m1-hero--variant m1-hero--stock" data-stock="true" data-component="m1-hero" data-series='[{"data":[43690,31225,39064,41818,38183],"name":"2014","color":"#087232"}]' data-x-axis-categories="10:00, 11:00,12:00,13:00,14:00">
        <div class="m1-hero__container">
            <div class="m1-hero__carousel">
                @foreach (var slide in Model.Children)
                {
                    <div class="m1-hero__carousel-slide" data-alt="@slide.Image.Alt" style="background-image:url('@(slide.Image != null && !string.IsNullOrWhiteSpace(slide.Image.Src)?slide.Image.Src: "")')">
                        <div class="m1-hero__overlay"></div>
                        <div class="m1-hero__carousel-slide-inner">
                            <div class="m1-hero__carousel-slide-panel--inner">
                                <div class="m1-hero__carousel-slide-panel-title">
                                    @Html.Glass().Editable(slide, x => x.Header)
                                </div>
                                <div class="m1-hero__carousel-slide-panel-subtitle">
                                    @Html.Glass().Editable(slide, x => x.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @Html.Sitecore().Placeholder("hero/stockcard")
        </div>
        <div class="m1-hero__carousel-nav">
            <div class="m1-hero__carousel-nav-outer">
                <div class="m1-hero__carousel-nav-inner-btn">
                    <div role="button" class="m1-hero__carousel-button-play-pause  m1-hero__carousel-button--pause"></div>
                </div>
            </div>
        </div>
    </div>
    @Html.Sitecore().Placeholder("hero/marquee")
}

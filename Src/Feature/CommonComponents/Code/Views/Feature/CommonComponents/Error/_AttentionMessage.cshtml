@{
	ModelState ms;

}

@if(!ViewData.ModelState.IsValid && ViewData.ModelState.TryGetValue(ViewData.TemplateInfo.HtmlFieldPrefix, out ms))
{
	<div class="grid__row">
		<div class="grid__column grid__column--12">
			<div class="m40-status-message m40-status-message--error icon icon-caution" data-component="m40-status-message">
				<div class="m40-status-message__title icon--error">@Sitecore.Globalization.Translate.Text("global.AttentionMessage")</div>
				<div class="m40-status-message__text">@Html.ValidationSummary(true)</div>
			</div>
		</div>
	</div>
}
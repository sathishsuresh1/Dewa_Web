@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Mvc
@model DEWAXP.Feature.CommonComponents.Models.Renderings.CarouselSet

@if (Model != null && Model.Children != null)
{
    bool teasersmall = (Html.Sitecore().CurrentRendering.Parameters["teasersmall"] != null && Html.Sitecore().CurrentRendering.Parameters["teasersmall"] == "true") ? true : false;
    var teasersmallclass = teasersmall ? "m60-small" : string.Empty;
    @Html.Partial("~/Views/Feature/CommonComponents/Renderings/Generic/M17 Section Title.cshtml", Model)
    <div class="grid__row" data-component="m60-teaser">
        @foreach (var item in Model.Children)
        {
            <div class="grid__column grid__column--3">
                <!-- start m60-teaser-->
                <div class="m60-teaser">
                    <a href="@(item.ButtonLink != null ? item.ButtonLink.Url : "#")" class="teaser__link @teasersmallclass">
                        @{
                            string AltHtml = item.Image != null && !string.IsNullOrEmpty(item.Image.Alt) ? string.Format("data-alt=\"{0}\"", item.Image.Alt) : "";
                        }
                        <div class="m60-teaser-image" @Html.Raw(AltHtml) style="background-image: url('@item.Image.Src')"></div>
                        <div class="teaser__content">
                            <h2 class="teaser__title">@Html.Glass().Editable(item, x => x.Header)</h2>
                            <p class="teaser__copy">@Html.Glass().Editable(item, x => x.Subheader)</p>
                        </div>
                    </a>
                </div>
                <!-- end m60-teaser-->
            </div>
        }
    </div>
}


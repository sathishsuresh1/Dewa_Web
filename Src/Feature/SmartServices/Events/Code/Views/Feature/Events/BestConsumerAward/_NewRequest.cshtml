@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Globalization
@using Sitecore.Resources.Media
@using Sitecore.Mvc.Configuration
@model DEWAXP.Feature.Events.Models.BestConsumerAward.BestConsumerAwardModel



<div class="grid">
    <div class="grid__row">


        <div class="grid__column grid__column--12 grid__column--form">


            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form", @data_form = "true", @data_parsley_focus = "none" }))
            {
                @Html.AntiForgeryToken()
            <fieldset class="fieldset">
                <legend class="legend-color">.</legend>
                <!--Contract Account Number-->
                <div class="form-field form-field--text ">

                    <label for="form-field-ContractAccountNumber" class="form-field__label">
                        @Translate.Text("Contract Account Number")
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.ContractAccountNumber"
                               required
                               maxlength="10"
                               name="ContractAccountNumber"
                               id="form-field-ContractAccountNumber"
                               data-parsley-required-message="@Translate.Text("Please enter a value")"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               @*aria-required="false"*@
                               aria-describedby="description-for-form-field-ContractAccountNumber"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-ContractAccountNumber" class="form-field__messages">
                        @Html.ValidationMessageFor(x => x.ContractAccountNumber, Translate.Text("Valid Contract Account"), new { @class = "parsley-errors-list" })
                    </div>
                </div>

                <!--Account Owner Name-->
                <div class="form-field form-field--text ">

                    <label for="form-field-AccountOwnerName" class="form-field__label">
                        @Translate.Text("Account Owner Name")
                        <span class="form-field__label-optional"></span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.AccountOwnerName"
                               required="required"
                               name="AccountOwnerName"
                               id="form-field-AccountOwnerName"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               data-parsley-required-message="@Translate.Text("Please enter a value")"
                               @*aria-required="true"*@
                               aria-describedby="description-for-form-field-AccountOwnerName"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-AccountOwnerName" class="form-field__messages"></div>
                </div>

                <!-- Mobile Number-->
                <div class="form-field form-field--text ">
                    <label for="form-field-MobileNumber" class="form-field__label">
                        @Translate.Text("Mobile Number")
                        <span class="form-field__label-required aria-only">@Translate.Text("generic required label")</span>
                    </label>

                    <span class="form-field__input-wrapper form-field__input-wrapper--prefixed form-field__input-wrapper--mobile-number">
                        <input type="tel"
                               name="MobileNumber"
                               value="@Model.MobileNumber"
                               id="form-field-MobileNumber"
                               class="form-field__input form-field__input--text form-field__input--prefixed keep-ltr"
                               aria-describedby="description-for-mobile-number"
                               placeholder="@Translate.Text("Please enter a value")"
                               data-parsley-type="digits"
                               data-parsley-mobile_number=""
                               data-parsley-error-message="@Translate.Text("Please enter a valid UAE mobile number")"
                               data-parsley-required-message="@Translate.Text("Please enter a value")"
                               data-parsley-errors-container="#description-for-mobile-number"
                               required />

                    </span>

                    <div id="description-for-mobile-number" class="form-field__messages">

                    </div>
                </div>


                <!-- Email Address (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-EmailAddress" class="form-field__label">
                        @Translate.Text("Email Address")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="email"
                               value="@Model.EmailAddress"
                               name="EmailAddress"
                               id="form-field-EmailAddress"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-EmailAddress"
                               data-parsley-trigger="focusout"
                               data-parsley-error-message="@Translate.Text("Please enter a valid email address")" />
                    </span>
                    <div id="description-for-form-field-EmailAddress" class="form-field__messages"></div>
                </div>

                <!-- Residence Address (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-ResidenceAddress" class="form-field__label">
                        @Translate.Text("Residence Address")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.ResidenceAddress"
                               name="ResidenceAddress"
                               id="form-field-ResidenceAddress"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-ResidenceAddress"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-ResidenceAddress" class="form-field__messages"></div>
                </div>

                <!-- Type of Residence (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-TypeResidence" class="form-field__label">
                        @Translate.Text("Type of Residence")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper form-field__input-wrapper--select">
                        <select id="form-field-TypeResidence"
                                name="TypeResidence"
                                data-parsley-id="20"
                                class="form-field__input form-field__input--select form-field__input--select-full"
                                aria-describedby="description-for-TypeResidence">
                            @foreach (var item in Model.ResidenceList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </span>
                    <div id="description-for-TypeResidence" class="form-field__messages"></div>
                </div>

                <!-- Type of AC (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-TypeAC" class="form-field__label">
                        @Translate.Text("Type of AC")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper form-field__input-wrapper--select">
                        <select id="form-field-TypeAC"
                                name="TypeAC"
                                data-parsley-id="20"
                                class="form-field__input form-field__input--select form-field__input--select-full"
                                aria-describedby="description-for-TypeAC">

                            @foreach (var item in Model.ACList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }

                        </select>
                    </span>
                    <div id="description-for-TypeAC" class="form-field__messages"></div>
                </div>

                <!-- Number of residents in household (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-NumberResidents" class="form-field__label">
                        @Translate.Text("Number of residents")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.NumberResidents"
                               name="NumberResidents"
                               id="form-field-NumberResidents"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-ContractAccountNumber"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-ContractAccountNumber" class="form-field__messages"></div>
                </div>

                <!-- Number of bedrooms (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-Numberbedrooms" class="form-field__label">
                        @Translate.Text("Number of bedrooms")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.Numberbedrooms"
                               name="Numberbedrooms"
                               id="form-field-Numberbedrooms"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-Numberbedrooms"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-Numberbedrooms" class="form-field__messages"></div>
                </div>

                <!-- Number of bathrooms (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-Numberbathrooms" class="form-field__label">
                        @Translate.Text("Number of bathrooms")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.Numberbathrooms"
                               name="Numberbathrooms"
                               id="form-field-Numberbathrooms"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-Numberbathrooms"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-Numberbathrooms" class="form-field__messages"></div>
                </div>

                <!-- Number of cars (optional)-->
                <div class="form-field form-field--text ">

                    <label for="form-field-NumberCars" class="form-field__label">
                        @Translate.Text("Number of cars")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.NumberCars"
                               name="NumberCars"
                               id="form-field-NumberCars"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-NumberCars"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-NumberCars" class="form-field__messages"></div>
                </div>

                <!-- Messures -->
                <div class="form-field form-field--text ">

                    <label for="form-field-Measures" class="form-field__label">
                        @Translate.Text("Measures")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <textarea class="form-field__input form-field__input--text form-field__input--textarea"
                                  name="Measures"
                                  maxlength="255"
                                  id="form-field-Measures"
                                  placeholder="@Translate.Text("Please enter a value")"
                                  aria-required="false"
                                  aria-describedby="description-for-form-field-Measures"
                                  data-parsley-trigger="focusout">@Model.Measures
                            </textarea>
                    </span>
                    <div id="description-for-form-field-Measures" class="form-field__messages"></div>
                </div>

                <!-- How did you hear -->
                <div class="form-field form-field--text ">

                    <label for="form-field-SourceType" class="form-field__label">
                        @Translate.Text("Source Question")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <div id="description-for-form-field-SourceType" class="form-field__messages"></div>
                </div>

                <label class="field-content field-content--radio">

                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="NewsPaper" data-id="NewsPaper" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("NewsPaper")</span>
                </label>
                <label class="field-content field-content--radio">
                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="Online" data-id="Online" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("Online")</span>
                </label>
                <label class="field-content field-content--radio">
                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="Social" data-id="Social" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("Social Media")</span>
                </label>
                <label class="field-content field-content--radio">
                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="Radio" data-id="Radio" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("Radio")</span>
                </label>
                <label class="field-content field-content--radio">
                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="FamilyFriends" data-id="FamilyFriends" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("Family Friends")</span>
                </label>
                <label class="field-content field-content--radio">
                    <input id="RdbGrp_Source" name="SourceType" type="radio" value="Educational Institution" data-id="Educational Institution" />
                    <span class="form-field__fakeradio focus-enabled">@Translate.Text("Educational Institution")</span>
                </label>

                <br />
                <div class="form-field form-field--text ">

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               value="@Model.InstituteName"
                               name="InstituteName"
                               id="form-field-InstituteName"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               data-parsley-required-message="@Translate.Text("Institue Required")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-InstituteName"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-InstituteName" class="form-field__messages"></div>
                </div>
            </fieldset>

                    <div class="form-field__button">
                        <button type="submit" class="button button--primary button--next" data-submission-text="@Translate.Text("Submitting")...">@Translate.Text("Submit")</button>
                    </div>
            }

        </div>
    </div>
</div>

<script>
    docReady(function () {


        $('input[name=SourceType][value="@Model.SourceType"]').attr('checked', true);


        var typeAC = '@Model.TypeAC';
        var typeResidence = '@Model.TypeResidence';

        if( typeAC != "null" )
        {
            $('#form-field-TypeAC').val('@Model.TypeAC');
        }


        if(typeResidence != "null" )
        {
            $('#form-field-TypeResidence').val('@Model.TypeResidence');
        }

        $("input[name=SourceType]:radio").click(function () {

            var select = $(this);
            var id = select.attr('data-id');


            if (id == 'Educational Institution') {
                $("input[name=InstituteName]").attr('required', true);
            }
            else {
                $("input[name=InstituteName]").removeAttr('required');

            }

        });


    });
</script>
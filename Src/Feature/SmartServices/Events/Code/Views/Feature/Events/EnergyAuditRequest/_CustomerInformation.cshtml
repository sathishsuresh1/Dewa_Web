@using Sitecore.Mvc
@using System.Web.Mvc
@using Sitecore.Mvc.Configuration
@using Sitecore.Globalization
@using DEWAXP.Foundation.Content
@using DEWAXP.Foundation.Helpers
@model DEWAXP.Feature.Events.Models.EnergyAudit.CustomerDetails

<div class="grid__row">
    <div class="grid__column grid__column--12 grid__column--form">
        @Html.Sitecore().Placeholder("step-tracker")
    </div>
</div>

@Html.Partial("~/Views/Feature/CommonComponents/Shared/_SubmissionError.cshtml")

<div class="grid__row">
    <div class="grid__column grid__column--12 grid__column--form">

        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form", data_form = "true" }))
        {
            @Html.Sitecore().FormHandler()
            @Html.AntiForgeryToken()

            <fieldset class="fieldset">
                <legend class="legend">@Translate.Text("J85.CustInfo")</legend>

                <div class="form-field form-field--text ">

                    <label for="form-field-customer-name" class="form-field__label">
                        @Translate.Text("J85.CustName")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               name="CustomerName"
                               id="form-field-customer-name"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               aria-required="false"
                               aria-describedby="description-for-form-field-customer-name"
                               data-parsley-trigger="focusout" />
                    </span>
                    <div id="description-for-form-field-customer-name" class="form-field__messages"></div>
                </div>

                <div class="form-field form-field--text ">
                    <label for="form-field-contact-person" class="form-field__label">
                        @Translate.Text("J85.ContactPerson")
                        <span class="form-field__label-required aria-only">(@Translate.Text("required"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="text"
                               name="ContactPerson"
                               id="form-field-contact-person"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Please enter a value")"
                               required="required"
                               @*aria-required="true"*@
                               aria-describedby="description-for-contact-person"
                               data-parsley-error-message="@Translate.Text("Please enter a value")"
                               data-parsley-errors-container="#description-for-contact-person"
                               data-parsley-trigger="focusout" />
                    </span>

                    <div id="description-for-contact-person" class="form-field__messages">
                        @Html.ValidationMessageFor(x => x.ContactPerson, "", new { @class = "parsley-errors-list" })
                    </div>
                </div>


                <div class="form-field form-field--text ">
                    <label for="form-field-mobile" class="form-field__label">
                        @Translate.Text("J85.ContactMobile")
                        <span class="form-field__label-required aria-only">(@Translate.Text("required"))</span>
                    </label>

                    <span class="form-field__input-wrapper form-field__input-wrapper--prefixed form-field__input-wrapper--mobile-number">
                        <input type="tel"
                               name="ContactMobile"
                               id="form-field-mobile"
                               class="form-field__input form-field__input--text form-field__input--prefixed"
                               placeholder="@Translate.Text("Mobile number")"
                               required="required"
                               @*aria-required="true"*@
                               aria-describedby="description-for-mobile"
                               data-parsley-error-message="@Translate.Text("Please enter a valid UAE mobile number")"
                               data-parsley-errors-container="#description-for-mobile"
                               data-parsley-trigger="focusout"
                               data-parsley-mobile_number />
                    </span>

                    <div id="description-for-mobile" class="form-field__messages">
                        @Html.ValidationMessageFor(x => x.ContactMobile, "", new { @class = "parsley-errors-list" })
                    </div>
                </div>


                <div class="form-field form-field--text ">
                    <label for="form-field-tel" class="form-field__label">
                        @Translate.Text("J85.ContactTelephone")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper form-field__input-wrapper--prefixed form-field__input-wrapper--mobile-number">
                        <input type="tel"
                               name="ContactTelephone"
                               id="form-field-tel"
                               class="form-field__input form-field__input--text form-field__input--prefixed"
                               placeholder="@Translate.Text("Telephone number placeholder")"
                               aria-required="false"
                               aria-describedby="description-for-tel"
                               data-parsley-telephone_number-message="@Translate.Text("Please enter a valid UAE telephone number")"
                               data-parsley-errors-container="#description-for-tel"
                               data-parsley-trigger="focusout"
                               data-parsley-telephone_number="" />
                    </span>

                    <div id="description-for-tel" class="form-field__messages"></div>
                </div>

                <div class="form-field form-field--text ">
                    <label for="form-field-email" class="form-field__label">
                        @Translate.Text("J85.ContactEmail")
                        <span class="form-field__label-required aria-only">(@Translate.Text("required"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <input type="email"
                               name="ContactEmail"
                               id="form-field-email"
                               class="form-field__input form-field__input--text"
                               placeholder="@Translate.Text("Enter email ID")"
                               required="required"
                               @*aria-required="true"*@
                               aria-describedby="description-for-email"
                               data-parsley-error-message="@Translate.Text("Please enter a valid email address")"
                               data-parsley-errors-container="#description-for-email"
                               data-parsley-trigger="focusout" />
                    </span>

                    <div id="description-for-email" class="form-field__messages">
                        @Html.ValidationMessageFor(x => x.ContactEmail, "", new { @class = "parsley-errors-list" })
                    </div>
                </div>

                <div class="form-field form-field--text form-field--textarea">

                    <label for="form-field-address" class="form-field__label">
                        @Translate.Text("Address")
                        <span class="form-field__label-optional">(@Translate.Text("optional"))</span>
                    </label>

                    <span class="form-field__input-wrapper">
                        <textarea class="form-field__input form-field__input--text form-field__input--textarea"
                                  id="form-field-address"
                                  name="Address"
                                  type="textarea"
                                  ria-describedby="description-for-address"
                                  data-parsley-errors-container="#description-for-address"></textarea>
                    </span>
                    <div id="description-for-address" class="form-field__messages"></div>
                </div>
            </fieldset>

            <div class="form-field__button">
                <button type="submit" class="button button--primary">@Translate.Text("J85.SubmitRequest")</button>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/External/nml/form-submit-validate.js"></script>

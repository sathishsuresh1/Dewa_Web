@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Globalization
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using DEWAXP.Foundation.Helpers

@*@{
        string checkedfield = !Model.IsLoggedIn ? "checked" : string.Empty;
        string notloggedcheckedfield = Model.IsLoggedIn ? "checked" : string.Empty;
    }*@

<div class="grid">
    @Html.Sitecore().Placeholder("j26/m26-page-title")
</div>
@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @data_form = "true", @data_parsley_focus = "none", @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="grid__row">
        <div class="grid__column grid__column--12 grid__column--form">
            <div class="form-field">
                <fieldset class="fieldset">
                    <legend class="legend-color">.</legend>
                    <div class="form-field">
                        <fieldset class="fieldset">
                            <legend class="legend-color">.</legend>
                            <p class="form-field__radio ">
                                <label for="form-field-radio_1_1">
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_1"
                                           name="radios_group1"
                                           type="radio"
                                           value="1"
                                           checked="checked"
                                           aria-describedby="description-for-radio_1_1"
                                           data-parsley-errors-container="#description-for-radio_1_1">

                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("clearancecertificate.dewacustomer")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("clearancecertificate.dewacustomerdesc")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-radio_1_1" class="form-field__messages">
                            </div>

                            @if (!ViewBag.IsLoggedIn)
                            {
                                <p class="form-field__radio ">
                                    <label for="form-field-radio_1_2">
                                        <input class="form-field__input form-field__input--radio" id="form-field-radio_1_2"
                                               name="radios_group1"
                                               type="radio"
                                               value="2"
                                               aria-describedby="description-for-radio_1_2"
                                               data-parsley-errors-container="#description-for-radio_1_2">
                                        <span class="form-field__fakeradio focus-enabled">
                                            @Translate.Text("clearancecertificate.nondewacustomer")
                                        </span><br />
                                        <span class="form-field__description align-radio-desc">
                                            @Translate.Text("clearancecertificate.nondewadesc")
                                        </span>
                                    </label>
                                </p>
                                <div id="description-for-radio_1_2" class="form-field__messages">
                                </div>
                            }

                            <p class="form-field__radio ">
                                <label for="form-field-radio_1_3">
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_3"
                                           name="radios_group1"
                                           type="radio"
                                           value="3"
                                           aria-describedby="description-for-radio_1_3"
                                           data-parsley-errors-container="#description-for-radio_1_3">

                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("clearancecertificate.propertysellers")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("clearancecertificate.propertysellersdesc")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-radio_1_3" class="form-field__messages">
                            </div>

                            <p class="form-field__radio ">
                                <label for="form-field-radio_1_4">
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_4"
                                           name="radios_group1"
                                           type="radio"
                                           value="4"
                                           aria-describedby="description-for-radio_1_4"
                                           data-parsley-errors-container="#description-for-radio_1_4">
                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("clearancecertificate.verify")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("clearancecertificate.verifydesc")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-radio_1_4" class="form-field__messages">
                            </div>
                        </fieldset>
                    </div>
                </fieldset>
                <div class="form-field__button">
                    <button type="submit" id="nonmoveinnext" class="button button--primary button--next">@Translate.Text("clearancecertificate.continue")</button>
                </div>
            </div>
        </div>
    </div>
}
@using Sitecore.Mvc
@model DEWAXP.Feature.Bills.Models.Estimates.FindEstimateModel
@using Sitecore.Globalization

<div class="box box--1">
    <div class="grid">
        @Html.Sitecore().Placeholder("j82/m26-page-title")
    </div>
</div>

@Html.Sitecore().Placeholder("j82/m41-tab-box")
<!--_FindFriendsEstimate.cshtml-->
@using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form form--inline", @id = "findEstimateForm", @data_form = "true" }))
{
    @Html.Sitecore().FormHandler()
    @Html.AntiForgeryToken()

    <div class="grid">
       

        <div class="grid__row">
            <div class="grid__column grid__column--12 grid__column--form">
                @Html.Partial("~/Views/Feature/CommonComponents/Error/AlertError.cshtml")
                @Html.Sitecore().Placeholder("j82/m14-journey-intro-rich-text")
                <!-- form -->
                <form class="form" data-form="true">
                    <div>
                        @Html.ValidationMessage("ResetPasswordError")
                    </div>
                    <fieldset class="fieldset ">
                        <legend class="legend-color">.</legend>
                        <div class="form-field form-field--text ">
                            <label class="form-field__label" for="form-field-estimate">
                                @Translate.Text("Friends Estimate number")
                                <span class="form-field__label-required aria-only">(@(Sitecore.Globalization.Translate.Text("required")))</span>
                            </label>
                            @*<label class="form-field__input-wrapper">*@
                            <span class="form-field__input-wrapper">
                                <input class="form-field__input form-field__input--text" id="form-field-estimate"
                                       name="EstimateNumber" maxlength="9" data-parsley-maxlength="9"
                                       type="number" lang="en" placeholder="@Translate.Text("enter friends estimate number")"
                                       aria-describedby="description-for-estimate"
                                       data-parley-errors-container="#description-for-estimate"
                                       required
                                       data-parsley-required-message="@Translate.Text("validation message")"
                                       data-parsley-estimate_number=""
                                       data-parsley-estimate_number-message="@Translate.Text("validation message")" />


                                @Html.ValidationMessageFor(x => x.EstimateNumber, "", new { @class = "parsley-errors-list" })
                            </span>
                            <div class="form-field__messages" id="description-for-estimate">

                            </div>
                        </div>

                    </fieldset>

                    <div class="form-field__button">
                        <button class="button button--primary" type="submit">@Translate.Text("Find Estimate")</button>
                    </div>
                </form>

                @*@Html.Action("EstimatePaymentHistory", "Estimate", new { payForFriend = true })*@
                @*@Html.Partial("/Views/Estimates/_EstimatePaymentHistory.cshtml", Model.History)*@
            </div>
        </div>
        
    </div>
}

<script src="~/scripts/External/nml/form-submit-validate.js"></script>


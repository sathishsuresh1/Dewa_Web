@using Sitecore.Globalization
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using DEWAXP.Foundation.Content
@model DEWAXP.Feature.HR.Models.Internship.Internship


<div class="grid__row">
    <div class="grid__column grid__column--12 grid__column--form">
        <div id="tracker">

            @Html.Sitecore().Placeholder("j18/m38-step-tracker")
        </div>
    </div>
</div>

<div class="grid__row">

    <div class="grid__column grid__column--12 grid__column--form">

        <p class="text__content-copy">@Translate.Text("INT.LBL.DESCRIPTION")</p>
        <p class="text__content-copy">@Translate.Text("INT.LBL.NOTE")</p>

        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new
        {
            @class = "form",
            @data_form = "true",
            @data_parsley_focus = "none",
            @data_submit_validate = "enabled"
        }))
        {
            @Html.Sitecore().FormHandler()
            @Html.AntiForgeryToken()
            @Html.Partial("~/Views/Feature/CommonComponents/Shared/_SubmissionError.cshtml")

            <fieldset class="fieldset">
                <legend class="legend-color">.</legend>
                <div class="form-field form-field--type">
                    <fieldset class="fieldset">
                        <legend class="form-field__label">
                            @Translate.Text("INT.LBL.NATIONAL")
                        </legend>
                        <p class="form-field__radio form-field--3">
                            <label>
                                <input class="form-field__input form-field__input--radio" id="form-field-type_1_1" aria-label="form-field-type_1_1" name="National" type="radio" value="yes" aria-describedby="description-for-o2kxlvvzz" data-parsley-errors-container="#description-for-o2kxlvvzz" checked>
                                <span class="form-field__fakeradio focus-enabled">
                                    @Translate.Text("INT.LBL.YES")
                                </span>
                            </label>
                        </p>
                        <p class="form-field__radio form-field--3">
                            <label>
                                <input class="form-field__input form-field__input--radio" id="form-field-type_1_2" aria-label="form-field-type_1_2" name="National" type="radio" value="no" aria-describedby="description-for-o2kxlvvzz" data-parsley-errors-container="#description-for-o2kxlvvzz">
                                <span class="form-field__fakeradio focus-enabled">
                                    @Translate.Text("INT.LBL.NO")
                                </span>
                            </label>
                        </p>
                        <div id="description-for-o2kxlvvzz" class="form-field__messages">
                        </div>
                    </fieldset>
                </div>
                <div class="form-field form-field--services">
                    <fieldset class="fieldset">
                        <legend class="form-field__label">
                            @Translate.Text("INT.LBL.INTERNSHIP.PROGRAM")
                        </legend>
                        <p class="form-field__radio ">
                            <label>
                                <input class="form-field__input form-field__input--radio" id="form-field-service_1_1" aria-label="form-field-service_1_1" name="Program" type="radio" value="1" aria-describedby="description-for-60d5jlivs" data-parsley-errors-container="#description-for-60d5jlivs" checked>
                                <span class="form-field__fakeradio focus-enabled">
                                    @Translate.Text("INT.LBL.INTERNSHIP")
                                </span>
                                <br>
                                <span class="form-field__description align-radio-desc">
                                    @Translate.Text("INT.LBL.INTERNSHIP.DESC")
                                </span>
                            </label>
                        </p>
                        <p class="form-field__radio ">
                            <label>
                                <input class="form-field__input form-field__input--radio" id="form-field-service_1_2" aria-label="form-field-service_1_2" name="Program" type="radio" value="2" aria-describedby="description-for-60d5jlivs" data-parsley-errors-container="#description-for-60d5jlivs">
                                <span class="form-field__fakeradio focus-enabled">
                                    @Translate.Text("INT.LBL.SUMMER.TRAINING")
                                </span>
                                <br>
                                <span class="form-field__description align-radio-desc">
                                    @Translate.Text("INT.LBL.SUMMER.TRAINING.DESC")
                                </span>
                            </label>
                        </p>
                        <p class="form-field__radio ">
                            <label>
                                <input class="form-field__input form-field__input--radio" id="form-field-service_1_3" aria-label="form-field-service_1_3" name="Program" type="radio" value="3" aria-describedby="description-for-60d5jlivs" data-parsley-errors-container="#description-for-60d5jlivs">
                                <span class="form-field__fakeradio focus-enabled">
                                    @Translate.Text("INT.LBL.PROJECT.RESEARCH")
                                </span>
                                <br>
                                <span class="form-field__description align-radio-desc">
                                    @Translate.Text("INT.LBL.PROJECT.RESEARCH.DESC")
                                </span>
                            </label>
                        </p>
                        <div id="description-for-60d5jlivs" class="form-field__messages">
                        </div>
                    </fieldset>
                </div>
            </fieldset>

            <div class="form-field__button">

                <button type="submit" class="button button--primary">@Translate.Text("Continue")</button>

            </div>



        }
    </div>
</div>

<script type="text/javascript">
    docReady(function () {
        jQuery('.form-field--type').find('input').each(function () {
            jQuery(this).off('click.type').on('click.type', function () {
                if (jQuery(this).val() == 'no' && jQuery(this).prop('checked')) {
                    var $input = jQuery('.form-field--services').find('#form-field-service_1_2'),
                        $first = jQuery('.form-field--services').find('input:first-child');

                    if ($input.prop('checked')) {
                        $first.trigger('click')
                    };

                    $input.closest('.form-field__radio').hide();
                } else {
                    var $input = jQuery('.form-field--services').find('#form-field-service_1_2');

                    $input.closest('.form-field__radio').show();
                }
            });
        });


    });
</script>

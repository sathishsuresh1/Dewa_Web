@using Sitecore.Mvc
@using DEWAXP.Foundation.Content
@{
    var dir = Sitecore.Context.Culture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
}

<div class="grid">

    <div class="grid__row">
        <div class="grid__column grid__column--12 grid__column--form">
            <div class="m40-status-message m40-status-message--success " data-component="m40-status-message">
                <div class="m40-status-message__title icon--success">@Translate.Text("Scholarship Registration Successful Title")</div>
                <div class="m40-status-message__text">@Translate.Text("Scholarship Registration Successful Message")</div>
            </div>

            <div class="seperator-btn" role="separator">
                <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.SCHOLARSHIP_SIGNIN_PAGE)">
                    @Translate.Text("Scholarship Login Button Label")
                </a>
            </div>
        </div>
    </div>

</div>

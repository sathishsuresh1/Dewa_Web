@using DEWAXP.Foundation.Helpers
@using Sitecore.Globalization
@using DEWAXP.Foundation.Content
@model DEWAXP.Feature.HR.Models.Scholarship.EmailVerificationModel
<div class="grid mt56">
    <div class="grid__row">
        <div class="grid__column grid__column--12 grid__column--form">

            @if (Model.verificationstatus == "-1")
            {
                <div class="m40-status-message m40-status-message--error icon icon-caution" data-component="m40-status-message">
                    <div class="m40-status-message__title icon--error">@Sitecore.Globalization.Translate.Text(DictionaryKeys.Global.SubmissionError)</div>
                    <div class="m40-status-message__text">@Model.errormessage</div>
                </div>
            }
            else
            {
                <div class="m40-status-message m40-status-message--success " data-component="m40-status-message">
                    <div class="m40-status-message__title icon--success">@Translate.Text("EC_title")</div>
                    @if (Model.verificationstatus == "1")
                    {
                        <div class="m40-status-message__text">@Translate.Text("EC_ConfirmMail")</div>
                        <br />
                        <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.SCHOLARSHIP_SIGNIN_PAGE)">
                            @Translate.Text("login button text")
                        </a>
                    }
                    else if (Model.verificationstatus == "0")
                    {
                        <div class="m40-status-message__text">@Translate.Text("EC_AlreadyConfirm")</div>
                        <br />
                        <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.SCHOLARSHIP_SIGNIN_PAGE)">
                            @Translate.Text("login button text")
                        </a>
                    }
                    else if (Model.verificationstatus == "2")
                    {
                        <div class="m40-status-message__text">@Translate.Text("EC_ConfirmationExpired")</div>
                        <br />
                        <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.SCHOLARSHIP_EMAIL_VERIFICATION)?t=@Model.param&rf=X">
                            @Translate.Text("EC_SendReEmailLinkText")
                        </a>
                    }
                    else
                    {
                        <div class="m40-status-message__text">@Translate.Text("email has been sent message")</div>
                    }
                </div>
            }
            @*<div class="seperator-btn" role="separator">
                    <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.CAREER_POTAL_LOGIN)">
                        @Translate.Text("login button text")
                    </a>
                </div>*@
        </div>
    </div>
</div>
<script language="javascript" type="text/javascript">
    $(function () {
        if (window.location.href.indexOf('?') > -1) {
            history.pushState('', document.title, window.location.pathname);
        }
    });
</script>


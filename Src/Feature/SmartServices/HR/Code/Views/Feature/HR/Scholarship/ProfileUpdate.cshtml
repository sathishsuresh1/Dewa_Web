@using Sitecore.Globalization
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using Glass.Mapper
@using DEWAXP.Foundation.Content
@model DEWAXP.Feature.HR.Models.Scholarship.ProfileUpdateModel
<div data-journey="j119-scholarship">
    <div class="grid">

        @Html.Sitecore().Placeholder("pagetitle")

        <div class="grid__row">

            <div class="grid__column grid__column--12 grid__column--form">

                <div class="m38-step-tracker" data-component="m38-step-tracker" data-total-steps="5" data-current-step="@Model.StepNumber" data-labels='{"conjunction":"@Translate.Text("of")"}' data-hasInfo="true">
                    <div class="m38-step-tracker__progressbar" data-m38-progressbar="true" role="progressbar" aria-valuetext="@Model.StepTitle">
                    </div>
                </div>

            </div>

        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--12 grid__column--form">
                @if (Model.Stage != DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.Completed)
                {
                    <p class="text__content-copy">@Translate.Text("Scholarship Form Header")</p>
                }
                @switch (Model.Stage)
            {
                default:
                case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.PersonalInformation:
                    {
                        Html.RenderPartial("~/Views/Feature/HR/Scholarship/_PersonalInformation.cshtml", Model.PersonalInformation);
                    }
                    break;
                case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.ContactDetails:
                    {
                        Html.RenderPartial("~/Views/Feature/HR/Scholarship/_ContactDetail.cshtml", Model.ContactInformation);
                    }
                    break;
                case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.AcademicInformation:
                    {
                        Html.RenderPartial("~/Views/Feature/HR/Scholarship/_AcademicInformation.cshtml", Model.AcademicInformation);
                    }
                    break;
                case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.Questionair:
                    {
                        Html.RenderPartial("~/Views/Feature/HR/Scholarship/_Questionnaire.cshtml", Model.Questionnaire);
                    }
                    break;
                case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.Completed:
                    {
                            <div class="m40-status-message m40-status-message--success " data-component="m40-status-message">
                                <div class="m40-status-message__text">@Translate.Text("Scholarship Profile Update Successful")</div>
                            </div>

                        }
                        break;
                    case DEWAXP.Feature.HR.Models.Scholarship.UpdateStage.Invalid:
                        {
                            <div class="m40-status-message m40-status-message--success " data-component="m40-status-message">
                                <div class="m40-status-message__text">@ErrorMessages.WEBSERVICE_ERROR</div>
                            </div>

                        }
                        break;
                }

            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    jQuery(function ($) {

        $(".m12-myaccount").hide();
    });

</script>

@using DEWAXP.Foundation.Helpers
@using Sitecore.Globalization
@using DEWAXP.Feature.HR.Models.CareerPortal
@using DEWAXP.Foundation.Content
@model CandidateEmailVerification
<div class="grid mt56">
    <div class="grid__row">
        <div class="grid__column grid__column--12 grid__column--form">
            <div class="m40-status-message m40-status-message--success " data-component="m40-status-message">
                <div class="m40-status-message__title icon--success">@Translate.Text("email confirmation title")</div>
                @if (Model.verificationstatus == "1")
                {
                    <div class="m40-status-message__text">@Translate.Text("confirmed email message")</div>
                    <br />
                    <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.CAREER_POTAL_LOGIN)">
                        Login
                    </a>
                }
                else if (Model.verificationstatus == "0")
                {
                    <div class="m40-status-message__text">@Translate.Text("already confirmed email message")</div>
                    <br />
                    <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.CAREER_POTAL_LOGIN)">
                        Login
                    </a>
                }
                else if (Model.verificationstatus == "2")
                {
                    <div class="m40-status-message__text">@Translate.Text("confirmed email expired message")</div>
                    <br />
                    <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.CAREER_POTAL_VERIFICATION)?PARAM=@Model.param&resendFlag=X">
                        Send new confirmation mail to my email address
                    </a>
                }
                else if (Model.verificationstatus == "-1")
                {
                    <div class="m40-status-message__text">@Model.errormessage</div>
                }
                else
                {
                    <div class="m40-status-message__text">@Translate.Text("email has been sent message")</div>
                }
            </div>
            @*<div class="seperator-btn" role="separator">
                    <a class="button button--primary button--fullwidth-mobile" href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.CAREER_POTAL_LOGIN)">
                        @Translate.Text("login button text")
                    </a>
                </div>*@
        </div>
    </div>
</div>
<script language="javascript" type="text/javascript">
    $(function () {
        if (window.location.href.indexOf('?') > -1) {
            history.pushState('', document.title, window.location.pathname);
        }
    });
</script>


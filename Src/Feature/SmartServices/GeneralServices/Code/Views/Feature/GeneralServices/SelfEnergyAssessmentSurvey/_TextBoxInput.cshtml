
@using System.Linq
@model DEWAXP.Feature.GeneralServices.Models.SelfEnergyAssessmentSurvey.SurveyQuestionViewModel

<!--
1 -Alphabets
2 -Numeric
3 -Alpha Numeric
4 -Decimals


-->
<div class="form-dynamic-section active">
    <div class="form-dynamic-section_screen"></div>
    <div class="form-dynamic-section_title">
        @Html.Raw(Model.Description)
    </div>
    <div class="form-field form-field--text">
        <label for="ff_@Model.Number" class="form-field__label">
            <span class="aria-only">@Html.Raw(Model.Description)</span>
        </label>
        <span class="form-field__input-wrapper">
            @switch (Model.Min)
            {
                case 1:
                case 3:
                    <input class="form-field__input form-field__input--text" id="ff_@Model.Number" name="@Model.GetKey()" type="text" placeholder="" maxlength="@Model.Max" data-parsley-maxlength="@Model.Max" aria-describedby="#des_@Model.Number" data-parsley-errors-container="#des_@Model.Number" required="" value="@Model.SelectedAnswer" data-parsley-required-message="@Sitecore.Globalization.Translate.Text("j154_FR")" data-parsley-trigger="focusout">
                    break;
                case 2:
                    <input class="form-field__input form-field__input--text" id="ff_@Model.Number" name="@Model.GetKey()" type="number" max="99" min="1" data-parsley-maxlength="@Model.Max" aria-describedby="#des_@Model.Number" data-parsley-errors-container="#des_@Model.Number" required="" value="@Model.SelectedAnswer" data-parsley-required-message="@Sitecore.Globalization.Translate.Text("j154_FR")" data-parsley-error-message="@Sitecore.Globalization.Translate.Text("j154_IntRange")" data-parsley-trigger="focusout">
                    break;
                case 4:
                    <input class="form-field__input form-field__input--text" id="ff_@Model.Number" name="@Model.GetKey()" type="number" step="0.01" placeholder="" max="99999.99" min="1.00" data-parsley-maxlength="@Model.Max" aria-describedby="#des_@Model.Number" data-parsley-errors-container="#des_@Model.Number" required="" value="@Model.SelectedAnswer" data-parsley-required-message="@Sitecore.Globalization.Translate.Text("j154_FR")" data-parsley-error-message="@Sitecore.Globalization.Translate.Text("j154_DblRange")" data-parsley-trigger="focusout">
                    break;
                default:
                    <input class="form-field__input form-field__input--text" id="ff_@Model.Number" name="@Model.GetKey()" type="text" placeholder="" maxlength="15" data-parsley-maxlength="15" aria-describedby="#des_@Model.Number" data-parsley-errors-container="#des_@Model.Number" required="" value="@Model.SelectedAnswer" data-parsley-required-message="@Sitecore.Globalization.Translate.Text("j154_FR")" data-parsley-trigger="focusout">
                    break;
            }

        </span>
        <div id="des_@Model.Number" class="form-field__messages">
        </div>
    </div>
</div>

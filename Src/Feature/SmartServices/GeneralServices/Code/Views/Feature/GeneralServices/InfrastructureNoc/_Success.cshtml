@using Sitecore.Mvc
@using DEWAXP.Foundation.Helpers
@using DEWAXP.Foundation.Content 
@using Sitecore.Globalization
@model DEWAXP.Feature.GeneralServices.Models.Infrastructure_Noc.SuccessModel

<div class="grid__row mt48">
    <div class="grid__column grid__column--12 grid__column--form">
        @if (Model.IsSuccess)
        {
            <div class="m40-status-message m40-status-message--success icon icon-new-success-message" data-component="m40-status-message">
                <div class="m40-status-message__title">@Translate.Text("NOC_RequestCompleted")</div>
                <div class="m40-status-message__text"><strong>@(Translate.Text("NOC_SuccessMsg").Replace("{0}", @Model.DEWAnum))</strong></div>
                <p>
                    <button class="button button--text button--printer noprint" data-print="page">@Sitecore.Globalization.Translate.Text("Print this page")</button>
                </p>
            </div>
        }
        else
        {
            <div class="m40-status-message m40-status-message--error icon icon-caution" data-component="m40-status-message">
                <div class="m40-status-message__title icon--error">@Sitecore.Globalization.Translate.Text(DictionaryKeys.Global.SubmissionError)</div>
                <div class="m40-status-message__text">@Model.description</div>
            </div>
        }
    </div>
</div>

<div class="grid__row noprint">
    <div class="grid__column grid__column--12 grid__column--centered grid__column--form">
        <h2 class="text__section-title">@Translate.Text("WhatNext")</h2>
        <p class="intro-text mt12">@Translate.Text("NOC_Success_Text")</p>
        <div class="button-container--single">
            <a href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.J22_TRACK_COMPLAINTS)" class="button button--primary button--next" role="button">@Translate.Text("NOC_TrackApplication")</a>
        </div>
    </div>
</div>
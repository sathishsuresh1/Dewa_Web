@using DEWAXP.Foundation.Helpers
@using Sitecore.Globalization
@using Sitecore.Mvc
@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Mvc.Configuration
@model DEWAXP.Foundation.Content.Models.MoveOut.v3.MoveOutAnonymous

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form form--inline", @id = "MoveOutAnonymousDetails", @data_form = "true", @novalidate = string.Empty }))
{
    @Html.Sitecore().FormHandler()
    @Html.AntiForgeryToken()

    if (Model != null)
    {
        <div class="grid__row">

            @Html.Sitecore().Placeholder("j15/m26-page-title")
            <div class="grid__column grid__column--12 grid__column--form">
                @Html.Sitecore().Placeholder("j15/m38-step-tracker")
                @Html.Partial("~/Views/Feature/CommonComponents/Shared/_SubmissionError.cshtml")
                @Html.Sitecore().Placeholder("helpdesktext")

                <fieldset class="fieldset">

                    <legend class="legend">@Translate.Text("Moveout.Anonymous.Message.ChooseVerify")</legend>

                    <div class="form-field">

                        <fieldset class="fieldset">
                            <legend class="legend-color">.</legend>
                            @if (!string.IsNullOrEmpty(Model.MaskedEmailAddress))
                            {
                                <p class="form-field__radio ">
                                    <label>
                                        <input class="form-field__input form-field__input--radio" id="SelectedOptions"
                                               aria-label="SelectedOptions"
                                               name="SelectedOptions"
                                               type="radio"
                                               value="email"
                                               aria-describedby="description-for-mwkcis1ps"
                                               data-parsley-errors-container="#description-for-mwkcis1ps"
                                               checked>

                                        <span class="form-field__fakeradio focus-enabled">

                                            @Translate.Text("Moveout.Anonymous.Label.Email") - <strong>@Model.MaskedEmailAddress</strong>

                                        </span>
                                    </label>
                                </p>
                            }

                            @if (!string.IsNullOrEmpty(Model.MaskedMobileNumber))
                            {
                                <p class="form-field__radio ">
                                    <label>
                                        <input class="form-field__input form-field__input--radio" id="SelectedOptions"
                                               aria-label="SelectedOptions"
                                               name="SelectedOptions"
                                               type="radio"
                                               value="mobile"
                                               aria-describedby="description-for-mwkcis1ps"
                                               data-parsley-errors-container="#description-for-mwkcis1ps"
                                               @(string.IsNullOrEmpty(Model.MaskedEmailAddress) ? "checked" : "")>

                                        <span class="form-field__fakeradio focus-enabled">

                                            @Translate.Text("Moveout.Anonymous.Label.MobileNumber") - <strong dir="ltr">@Model.MaskedMobileNumber</strong>

                                        </span>
                                    </label>
                                </p>
                            }

                            <div id="description-for-mwkcis1ps" class="form-field__messages">
                            </div>


                            <input type="hidden" value="@Model.PremiseNumber" name="PremiseNumber" />
                            <input type="hidden" value="@Model.AccountNumber" name="AccountNumber" />

                        </fieldset>

                    </div>






                </fieldset>
                <div class="form-field__button">
                    <button class="button button--primary" type="submit">@Translate.Text("Moveout.Anonymous.Btn.Get.Code")</button>
                </div>
            </div>
        </div>
    }
    else
    {
        Response.Redirect("../moveout-anonymous");
    }

}
<script type="text/javascript">
      $('.m38-step-tracker').attr('data-total-steps', "5");
        $('.m38-step-tracker').attr('data-current-step', "2");
        $('.m38-step-tracker__progressbar').attr('aria-valuetext', '@Translate.Text("Moveout.Anonymous.Step2.Info")');
        $('.m38-step-tracker').attr('data-hasinfo', "true");
</script>
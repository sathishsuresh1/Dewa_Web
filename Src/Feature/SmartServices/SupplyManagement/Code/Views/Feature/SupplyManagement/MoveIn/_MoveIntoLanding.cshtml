@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Globalization
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using DEWAXP.Foundation.Helpers
@model DEWAXP.Feature.SupplyManagement.Models.MoveIn.MoveIntoIntro
@{
    string checkedfield = !Model.IsLoggedIn ? "checked" : string.Empty;
    string notloggedcheckedfield = Model.IsLoggedIn ? "checked" : string.Empty;
}
<div class="grid">
    @Html.Sitecore().Placeholder("j100/m26-page-title")
</div>
@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @data_form = "true", @data_parsley_focus = "none", @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="grid__row">
        <div class="grid__column grid__column--12 grid__column--form">
            <div class="form-field">
                <fieldset class="fieldset">
                    <legend class="legend-color">.</legend>
                    <div class="form-field">
                        <fieldset class="fieldset">
                            <legend class="legend-color">.</legend>
                            @if (!Model.IsLoggedIn)
                            {
                                <p class="form-field__radio ">
                                    <label>
                                        <input class="form-field__input form-field__input--radio" id="form-field-radio_1_1"
                                               aria-label="form-field-radio_1_1"
                                               name="radios_group1"
                                               type="radio"
                                               value="1"
                                               aria-describedby="description-for-qiwuv2ro1"
                                               data-parsley-errors-container="#description-for-qiwuv2ro1" @checkedfield>

                                        <span class="form-field__fakeradio focus-enabled">
                                            @Translate.Text("moveinlanding.newindubaititle")
                                        </span><br />
                                        <span class="form-field__description align-radio-desc">
                                            @Translate.Text("moveinlanding.newindubaitext")
                                        </span>
                                    </label>
                                </p>
                            }
                            <p class="form-field__radio ">
                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_2"
                                           aria-label="form-field-radio_1_2"
                                           name="radios_group1"
                                           type="radio"
                                           value="2"
                                           aria-describedby="description-for-qiwuv2ro1"
                                           data-parsley-errors-container="#description-for-qiwuv2ro1" @notloggedcheckedfield>
                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("moveinlanding.movein")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("moveinlanding.moveintext")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-qiwuv2ro1" class="form-field__messages">
                            </div>
                            <p class="form-field__radio ">
                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_3"
                                           aria-label="form-field-radio_1_3"
                                           name="radios_group1"
                                           type="radio"
                                           value="3"
                                           aria-describedby="description-for-qiwuv2ro1"
                                           data-parsley-errors-container="#description-for-qiwuv2ro1">
                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("moveinlanding.moveto")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("moveinlanding.movetotext")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-qiwuv2ro1" class="form-field__messages">
                            </div>
                            <p class="form-field__radio ">
                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_4"
                                           aria-label="form-field-radio_1_4"
                                           name="radios_group1"
                                           type="radio"
                                           value="4"
                                           aria-describedby="description-for-qiwuv2ro1"
                                           data-parsley-errors-container="#description-for-qiwuv2ro1">

                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("moveinlanding.moveout")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("moveinlanding.moveouttext")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-qiwuv2ro1" class="form-field__messages">
                            </div>
                            <p class="form-field__radio ">
                                <label>
                                    <input class="form-field__input form-field__input--radio" id="form-field-radio_1_5"
                                           aria-label="form-field-radio_1_5"
                                           name="radios_group1"
                                           type="radio"
                                           value="5"
                                           aria-describedby="description-for-qiwuv2ro1"
                                           data-parsley-errors-container="#description-for-qiwuv2ro1">

                                    <span class="form-field__fakeradio focus-enabled">
                                        @Translate.Text("moveinlanding.moveoutdemolish")
                                    </span><br />
                                    <span class="form-field__description align-radio-desc">
                                        @Translate.Text("moveinlanding.moveoutdemolishtext")
                                    </span>
                                </label>
                            </p>
                            <div id="description-for-qiwuv2ro1" class="form-field__messages">
                            </div>
                        </fieldset>
                    </div>
                </fieldset>
                <div class="form-field__button">
                    <button type="submit" id="nonmoveinnext" class="button button--primary button--next">@Translate.Text("moveinlanding.continue")</button>
                </div>
            </div>
        </div>
    </div>
}
@model DEWAXP.Foundation.Content.Models.AccountModel.LoginModel
@using System.Threading
@using DEWAXP.Foundation.Helpers;
@using Sitecore.Globalization
@using DEWAXP.Foundation.Content

<div class="m12-myaccount__login-form">
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form", @data_form = "true", @data_parsley_focus = "none", @id = "logform", @data_submit_validate = "enabled", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
        <div class="form-field form-field--text ">
            <label for="form-field-em9lr89ak" class="form-field__label">
                @Translate.Text("header.username")
                <span class="form-field__label-required aria-only">(@Translate.Text("header.required"))</span>
            </label>
            <span class="form-field__input-wrapper">
                <input class="form-field__input form-field__input--text"
                       id="form-field-em9lr89ak"
                       name="username"
                       type="text"
                       placeholder="@Translate.Text("header.username")"
                       aria-describedby="description-for-em9lr89ak"
                       data-parsley-errors-container="#description-for-em9lr89ak"
                       required
                       data-parsley-required-message="This field is required"
                       data-parsley-username = ""
                       maxlength="20"
                       data-parsley-username-message="Please enter an alphanumeric username between 6 and 75 characters"/>
            </span>
            <div id="description-for-em9lr89ak" class="form-field__messages">
            </div>
        </div>
        <div class="form-field form-field--text ">
            <label for="form-field-x920cbp0k" class="form-field__label">
                @Translate.Text("header.password")
                <span class="form-field__label-required aria-only">(@Translate.Text("header.required"))</span>
            </label>
            <span class="form-field__input-wrapper">
                <input class="form-field__input form-field__input--text"
                       id="form-field-x920cbp0k"
                       name="password"
                       type="password"
                       autocomplete="off"
                       placeholder="@Translate.Text("header.password")"
                       aria-describedby="description-for-x920cbp0k"
                       data-parsley-errors-container="#description-for-x920cbp0k"
                       required
                       data-parsley-required-message="This field is required" />
            </span>
            <div id="description-for-x920cbp0k" class="form-field__messages">
            </div>
        </div>
        <div class="form-field form-field--toggles">
            <fieldset class="fieldset">
                <legend class="form-field__label aria-only">
                    @Translate.Text("header.rememberme")
                    <span class="form-field__label-optional">(@Translate.Text("header.optional"))</span>
                </legend>
                <div class="form-field__checkbox  last  first">
                    <label for="checkbox_rememberme1">
                        <input class="form-field__input form-field__input--checkbox"
                               id="form-field-checkbox_rememberme1"
                               name="checkbox_rememberme1"
                               type="checkbox"
                               value="1"
                               aria-describedby="description-for-24fxzfc0l"
                               data-parsley-errors-container="#description-for-24fxzfc0l">

                        <span class="form-field__fakecheckbox focus-enabled">
                            @Translate.Text("header.rememberme")
                        </span>
                    </label>
                </div>
                <div id="description-for-24fxzfc0l" class="form-field__messages">
                </div>
            </fieldset>
        </div>
        <div class="form-field__button">
            <button type="submit" class="button button--next button--primary button--fullwidth-mobile" data-submission-text="@Translate.Text("Logging in")...">@Translate.Text("header.loginbutton")</button>
        </div>
}
    <ul class="form-links">
        <li class="form-links__item"><a href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.J7_FORGOT_PASSWORD)" class="form-links__link">@Translate.Text("header.forgotpassword")</a></li>
        <li class="form-links__item"><a href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.J7_FORGOT_USERNAME)" class="form-links__link">@Translate.Text("header.forgotusername")</a></li>
    </ul>
    <span class="create form-links">
        @Translate.Text("or") <a href="@LinkHelper.GetItemUrl(SitecoreItemIdentifiers.J9_CUSTOMER_REGISTRATION)" class="form-links__link"> @Translate.Text("header.createnewaccount")</a>
    </span> 
</div> 


<script src="~/scripts/External/nml/form-submit-validate.js"></script>

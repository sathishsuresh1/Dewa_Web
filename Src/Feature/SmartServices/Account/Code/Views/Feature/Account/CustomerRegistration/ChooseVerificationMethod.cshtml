@using DEWAXP.Feature.Account.Models.CustomerRegistration
@using Sitecore.Globalization
@using Sitecore.Mvc
@using Sitecore.Mvc.Configuration
@using DEWAXP.Foundation.Content
@model ConfirmVerificationMethodModel
<div class="grid">
	<div class="grid__row">
		<div class="grid__column grid__column--12">
			@Html.Sitecore().Placeholder("j9/m26-page-title")
		</div>
	</div>
	<div class="grid__row">
		<div class="grid__column grid__column--12 grid__column--form grid__column--centered">
			@Html.Sitecore().Placeholder("j9/m38-step-tracker")
			@Html.Sitecore().Placeholder("j9/choose verification method intro")
		</div>
	</div>
	<div class="grid__row">
		<div class="grid__column grid__column--12 grid__column--form">
			@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form", @data_form = "true", @data_parsley_focus = "none", @data_submit_validate = "enabled" }))
			{
				@Html.AntiForgeryToken()
				<fieldset class="fieldset">
                    <legend class="legend-color">.</legend>
					<div class="form-field">
						@if (!string.IsNullOrWhiteSpace(Model.Email))
						{
							<p class="form-field__radio">
								<label>
									@Html.RadioButtonFor(m => m.SelectedMethod, VerificationMethods.Email, new
									{
										@class = "form-field__input form-field__input--radio",
										@aria_describedby = "description-for-radio_1_1"
									})
									<span class="form-field__fakeradio focus-enabled">
										<span class="verification--key">@Translate.Text("email label")</span><span class="verification--value">@Model.Email</span>
									</span>
								</label>
							</p>
						}

						@if (!string.IsNullOrWhiteSpace(Model.Mobile))
						{
							<p class="form-field__radio">
								<label>
									@Html.RadioButtonFor(m => m.SelectedMethod, VerificationMethods.Mobile, new
									{
										@class = "form-field__input form-field__input--radio",
										@aria_describedby = "description-for-radio_1_2"
									})
									<span class="form-field__fakeradio focus-enabled">
										<span class="verification--key">@Translate.Text(DictionaryKeys.Registration.MobileNumberLabel)</span>
										<span class="verification--value" dir="ltr">@Model.Mobile</span>
									</span>
								</label>
							</p>
						}
						<div id="description-for-pwl28lhdv" class="form-field__messages"></div>
					</div>
				</fieldset>
				<div class="form-field__button">
					<button type="submit" class="button button--primary" data-submission-text="@Translate.Text("Submitting")...">@Translate.Text("get code button text")</button>
				</div>
			}
		</div>
	</div>
</div>
<script src="~/scripts/External/nml/form-submit-validate.js"></script>
